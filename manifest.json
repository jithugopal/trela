{
  "manifest_version": 2,

  "name": "Trela",
  "description": "A tribute to the people who died waiting for the webpage to load.",
  "version": "1.0",

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Trela"
  },

  "background": {
    "persistent": false,
    "page": "background.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["local_storage.js", "contentscript.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "options_page": "options.html",

  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}
